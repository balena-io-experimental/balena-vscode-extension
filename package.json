{
	"name": "balena-vscode",
	"displayName": "balena-vscode",
	"description": "Balena in VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:balenaDevices",
		"onCommand:workbench.action.tasks.runTask"
	],
	"main": "./out/extension.js",
	"contributes": {
		"taskDefinitions": [
			{
				"type": "livepush",
				"required": [
					"host"
				],
				"properties": {
					"host": {
						"type": "string",
						"description": "The host to livepush the workspace to."
					}
				}
			}
		],
		"commands": [
			{
				"command": "balena.livePush",
				"title": "LivePush",
				"icon": "resources/livepush.svg"

			},
			{
				"command": "balena.ssh",
				"title": "SSH",
				"icon": "resources/terminal.svg"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "balenaDevices",
					"name": "balena",
					"icon": "resources/balena.png"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "balena.livePush",
					"when": "view == balenaDevices && viewItem == device",
					"group": "inline"
				},
				{
					"command": "balena.ssh",
					"when": "view == balenaDevices && viewItem == device",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/bonjour": "^3.5.7",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"bonjour": "^3.5.0",
		"strict-event-emitter-types": "^2.0.0"
	}
}
